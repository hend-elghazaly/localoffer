<!DOCTYPE html>
<html>
  <head>
    <title>WebApp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Bootstrap Core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Theme CSS -->
    <link href="css/freelancer.min.css" rel="stylesheet">

  </head>

  <body>
    <!-- Navigation  if you want it fixed add below navbar-fixed-top-->
    <nav id="mainNav" class="navbar navbar-default navbar-custom">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
          </button>
          <a class="navbar-brand" href=/>Sheffield Local Offer</a>

        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">

            <li class="page-scroll">
              <%= link_to "Advice and Information", information_path %>
            </li>
            <li class="page-scroll">
              <%= link_to "News and Events", news_path %>
            </li>
            <li class="page-scroll">
              <%= link_to "Game", game_path %>
            </li>
            <li class="page-scroll">
              <%= link_to "Search Page", search_path %>
            </li>
            <li class="page-scroll">
              <%= link_to "My Account", myAccount_path %>
            </li>
            <li class="page-scroll">
              <%= link_to "Feedback", feedback_path%>
            </li>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>


    <%= yield %>
    <%= render "layouts/footer" %>
    
  </body>


</html>
